@model IEnumerable<Fabryka.Models.Maszyna>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Maszyna", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group">
        <input type="text" name="wyszukaj_maszyne" value="" class="form-control" />
        <input type="submit" name="Szukaj" value="Szukaj" class="btn btn-primary" />
    </div>
}

<table class="table" style="margin-top:20px;">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hala.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numer_ewidencyjny)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_uru)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Operatorzy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hala.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numer_ewidencyjny)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_uru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operatorzy)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
